{% extends "base.html" %}

{% block title %}Vérifier les doublons entre serveurs Plex{% endblock %}

{% block header_title %}Vérifier les doublons entre serveurs Plex{% endblock %}

{% block content %}
    <form method="post">
        <div class="form-group">
            <label for="library">Choisissez une bibliothèque :</label>
            <select class="form-control" id="library" name="library">
                <option value="films">Films</option>
                <option value="series">Séries</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Vérifier les doublons</button>
    </form>
    <h2 class="my-4">CSV existants</h2>
    <div class="list-group">
        {% if common_movies_csv_exists %}
            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ url_for('view_existing_csv', library='common_movies') }}" class="list-group-item list-group-item-action flex-grow-1">Voir CSV des films en commun</a>
                <form action="{{ url_for('delete_csv', csv_file=CSV_FILE_COMMON_MOVIES) }}" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm">🗑️</button>
                </form>
            </div>
        {% endif %}
        {% if common_series_csv_exists %}
            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ url_for('view_existing_csv', library='common_series') }}" class="list-group-item list-group-item-action flex-grow-1">Voir CSV des séries en commun</a>
                <form action="{{ url_for('delete_csv', csv_file=CSV_FILE_COMMON_SERIES) }}" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm">🗑️</button>
                </form>
            </div>
        {% endif %}
    </div>
{% endblock %}
